<script>
    (function() {
        const container = document.querySelector('.mnfs-section-wrapper');
        const bgImg = document.querySelector('.mnfs-bg-image');
        
        if (!container || !bgImg) return;

        // Function to calculate and set height based on image aspect ratio
        function updateLayoutHeight() {
            if (bgImg.naturalWidth > 0) {
                const aspectRatio = bgImg.naturalHeight / bgImg.naturalWidth;
                const containerWidth = container.offsetWidth;
                const height = containerWidth * aspectRatio;
                
                if (height > 0) {
                    container.style.minHeight = height + 'px';
                }
            }
        }

        // Initial Load Check
        if (bgImg.complete) {
            updateLayoutHeight();
        } else {
            bgImg.onload = updateLayoutHeight;
        }

        // Listen for resize
        window.addEventListener('resize', updateLayoutHeight);

        // Update Layout when image source changes (triggered by Main Script)
        const observer = new MutationObserver((mutations) => {
            mutations.forEach((mutation) => {
                if (mutation.type === 'attributes' && mutation.attributeName === 'src') {
                    bgImg.onload = updateLayoutHeight;
                }
            });
        });
        observer.observe(bgImg, { attributes: true });

        // Helper: Update Accent Color
        function updateColor(color) {
            if (color === 'blue') {
                container.style.setProperty('--spec-accent-color', '#8BBAD8');
            } else {
                container.style.setProperty('--spec-accent-color', '#FC832C');
            }
        }

        // --- VARIANT CHANGE LISTENER ---
        window.addEventListener('variantChange', (e) => {
            if (e.detail && e.detail.flavour) {
                updateColor(e.detail.flavour.toLowerCase());
            }
        });

        // --- INITIALIZATION ---
        const params = new URLSearchParams(window.location.search);
        const urlVariantId = params.get('variant');
        
        // Check for Blue variants
        if (urlVariantId === '51120630038849' || urlVariantId === '51120630006081') {
            updateColor('blue');
        } else {
            updateColor('orange');
        }

    })();
</script>
  
