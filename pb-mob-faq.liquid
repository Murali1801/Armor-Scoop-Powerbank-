<script>
  (function() {
    function initMobileFAQ() {
      const accordionHeaders = document.querySelectorAll(".mobile-accordion__header");
      const faqChips = document.querySelectorAll(".mobile-faq__chip");
      const faqItems = document.querySelectorAll(".mobile-faq__list .mobile-accordion");
      const faqContainer = document.querySelector('.mobile-faq');

      // Helper to update color
      const updateThemeColor = (flavor) => {
          const safeFlavor = flavor ? flavor.toLowerCase() : 'orange';
          const colorMap = {
              'orange': '#FC832C',
              'blue': '#8BBAD8'
          };
          const newColor = colorMap[safeFlavor] || '#FC832C';
          
          if(faqContainer) {
              faqContainer.style.setProperty('--faq-accent-color', newColor);
          }
      };

      // 1. LISTEN FOR VARIANT CHANGES (Dynamic Theme Color)
      window.addEventListener('variantChange', (e) => {
          if (e.detail && e.detail.flavour) {
              updateThemeColor(e.detail.flavour);
          }
      });

      // 2. CHECK URL ON LOAD
      const params = new URLSearchParams(window.location.search);
      const urlVariantId = params.get('variant');
      
      // Check against ALL Blue Variant IDs (10k & 20k)
      if (urlVariantId === '51120630038849' || urlVariantId === '51120630006081') {
          updateThemeColor('blue');
      } else {
          // Default is Orange (covers Orange IDs and fallback)
          updateThemeColor('orange');
      }

      // 3. ACCORDION LOGIC
      accordionHeaders.forEach((button) => {
        button.addEventListener("click", () => {
          const parent = button.closest(".mobile-accordion");
          const isOpen = parent.classList.contains("mobile-open");

          // Close all other accordions first (Exclusive Accordion Logic)
          faqItems.forEach((item) => {
            if (item !== parent) {
              item.classList.remove("mobile-open");
            }
          });

          // Toggle current
          if (isOpen) {
            parent.classList.remove("mobile-open");
          } else {
            parent.classList.add("mobile-open");
          }
        });
      });

      // 4. FILTER LOGIC
      const applyFilter = (category) => {
        faqItems.forEach((item) => {
          if (!category || category === "all" || item.dataset.category === category) {
            item.classList.remove("mobile-is-hidden");
          } else {
            item.classList.add("mobile-is-hidden");
            // Also close the item if it's hidden to reset state
            item.classList.remove("mobile-open"); 
          }
        });
      };

      const setActiveChip = (activeChip) => {
        faqChips.forEach((chip) => {
          chip.classList.toggle("mobile-is-active", chip === activeChip);
        });
      };

      faqChips.forEach((chip) => {
        chip.addEventListener("click", () => {
          const category = chip.dataset.category || "all";
          setActiveChip(chip);
          applyFilter(category);
        });
      });

      const defaultChip = document.querySelector('.mobile-faq__chip[data-category="all"]');
      if (defaultChip) {
        setActiveChip(defaultChip);
        applyFilter("all");
      } else {
        applyFilter("all");
      }
    }

    if (document.readyState === "loading") {
      document.addEventListener("DOMContentLoaded", initMobileFAQ);
    } else {
      initMobileFAQ();
    }
  })();
</script>

