<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Stack+Sans+Headline:wght@200..700&family=Stack+Sans+Notch:wght@200..700&family=Stack+Sans+Text:wght@200..700&display=swap" rel="stylesheet">
<style>
    @font-face {
        font-family: 'Suisse Intl';
        src: url('https://res.cloudinary.com/dadz5dzth/raw/upload/v1765092688/fonnts.com-Suisse_Intl_Regular_b8q6gk.ttf') format('truetype');
        font-weight: 400;
        font-style: normal;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        margin: 0;
        padding: 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    }

    .multiport-main-container {
        position: relative;
        width: 100%;
        max-width: 100%;
        min-width: 100%;
        background-color: #F2F2F2;
        aspect-ratio: 1440 / 1122;
        
        /* Mask Settings - Updated by Main Script */
        -webkit-mask-image: url('https://cdn.shopify.com/s/files/1/0967/6039/8106/files/multiport_section_shape_base.svg?v=1765170857');
        mask-image: url('https://cdn.shopify.com/s/files/1/0967/6039/8106/files/multiport_section_shape_base.svg?v=1765170857');
        -webkit-mask-size: 100% 100%;
        mask-size: 100% 100%;
        -webkit-mask-repeat: no-repeat;
        mask-repeat: no-repeat;
        -webkit-mask-position: center;
        mask-position: center;
        -webkit-mask-mode: alpha;
        mask-mode: alpha;
        
        display: flex;
        align-items: center;
        overflow: hidden;
        margin-top: 0px;
        z-index: -1;
    }


    .multiport-image-section {
        width: 65%;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2.5%;
        position: relative;
        overflow: visible;
    }

    .multiport-image-section img {
        position: absolute;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
        transform: translate(calc(-50 / 1440 * 100vw), calc(-20 / 1440 * 100vw)) scale(14);
        z-index: 1;
        /* Added Transition */
        transition: opacity 0.3s ease, transform 0.3s ease;
    }

    .multiport-content-section {
        width: 35%;
        padding: 2.5%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        position: relative;
        z-index: 2;
    }

    .multiport-headline {
        font-family: 'Stack Sans Headline', sans-serif;
        font-style: normal;
        font-weight: 700;
        font-size: calc(36 / 1440 * 100vw);
        line-height: calc(35 / 1440 * 100vw);
        display: flex;
        align-items: center;
        color: #000000;
        margin-bottom: calc(2 / 1440 * 100vw);
    }

    .multiport-sub-headline {
        font-family: 'Stack Sans Text', sans-serif;
        font-style: normal;
        font-weight: 400;
        font-size: calc(24 / 1440 * 100vw);
        line-height: calc(38 / 1440 * 100vw);
        
        /* Initial Color - Updated by Main Script */
        color: #FC832C;
        
        margin-bottom: calc(30 / 1440 * 100vw);
        
        /* Added Transition */
        transition: color 0.3s ease;
    }

    .multiport-body-text {
        font-family: 'Stack Sans Text', sans-serif;
        font-style: normal;
        font-weight: 400;
        font-size: calc(18 / 1440 * 100vw);
        line-height: calc(20 / 1440 * 100vw);
        color: #010101;
    }

    /* Tablet Styles (768px - 1024px) */
    @media (min-width: 768px) and (max-width: 1024px) {
        .multiport-main-container {
            position: relative;
            width: 100%;
            max-width: 100%;
            min-width: 100%;
            background-color: #F2F2F2;
            aspect-ratio: 1440 / 1122;
            -webkit-mask-image: url('https://cdn.shopify.com/s/files/1/0967/6039/8106/files/multiport_section_shape_base.svg?v=1765170857');
            mask-image: url('https://cdn.shopify.com/s/files/1/0967/6039/8106/files/multiport_section_shape_base.svg?v=1765170857');
            -webkit-mask-size: 100% 100%;
            mask-size: 100% 100%;
            -webkit-mask-repeat: no-repeat;
            mask-repeat: no-repeat;
            -webkit-mask-position: center;
            mask-position: center;
            -webkit-mask-mode: alpha;
            mask-mode: alpha;
            display: flex;
            align-items: center;
            overflow: hidden;
            margin-top: calc(-10 / 768 * 100vw);
            z-index: -1;
        }

        .multiport-image-section {
            width: 65%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2.2%;
            position: relative;
            overflow: visible;
        }

        .multiport-image-section img {
            position: absolute;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: contain;
            transform: translate(calc(-40 / 768 * 100vw), calc(-15 / 768 * 100vw)) scale(19);
            z-index: 1;
        }

        .multiport-content-section {
            width: 35%;
            padding-right: 5%;
            margin-top: calc(-30 / 768 * 100vw);
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;
            z-index: 2;
        }

        .multiport-headline {
            font-family: 'Stack Sans Headline', sans-serif;
            font-style: normal;
            font-weight: 700;
            font-size: calc(24 / 768 * 100vw);
            line-height: calc(24 / 768 * 100vw);
            display: flex;
            align-items: center;
            color: #000000;
            margin-bottom: calc(2 / 768 * 100vw);
        }

        .multiport-sub-headline {
            font-family: 'Stack Sans Text', sans-serif;
            font-style: normal;
            font-weight: 400;
            font-size: calc(14 / 768 * 100vw);
            line-height: calc(18 / 768 * 100vw);
            color: #FC832C;
            margin-bottom: calc(26 / 768 * 100vw);
        }

        .multiport-body-text {
            font-family: 'Stack Sans Text', sans-serif;
            font-style: normal;
            font-weight: 400;
            font-size: calc(10 / 768 * 100vw);
            line-height: calc(12 / 768 * 100vw);
            color: #010101;
        }
    }

    /* Mobile Styles */
    @media (max-width: 767px) {
        .multiport-image-section {
            padding: 2%;
        }

        .multiport-content-section {
            padding: 2%;
        }

        .multiport-image-section img {
            transform: translate(calc(-30 / 1440 * 100vw), calc(50 / 1440 * 100vw)) scale(12);
        }
    }

    @media (max-width: 480px) {
        .multiport-image-section {
            padding: 1.5%;
        }

        .multiport-content-section {
            padding: 1.5%;
        }

        .multiport-image-section img {
            transform: translate(calc(-20 / 1440 * 100vw), calc(40 / 1440 * 100vw)) scale(10);
        }
    }
</style>

<div class="multiport-main-container">
