<script>
    (function() {
        const container = document.querySelector('.desktop-nutritional-facts-section');
        
        // Function to calculate and set height based on the background image's aspect ratio
        function updateDimensions() {
            if (!container) return;
            let bgValue = container.style.getPropertyValue('--bg-url');
            
            if (!bgValue) {
                bgValue = getComputedStyle(container).getPropertyValue('--bg-url');
            }

            if (bgValue) {
                const cleanUrl = bgValue.replace(/^url\(['"]?/, '').replace(/['"]?\)$/, '');
                
                if (cleanUrl && cleanUrl !== 'none') {
                    const img = new Image();
                    img.onload = function() {
                        const viewportWidth = window.innerWidth;
                        const svgAspectRatio = this.height / this.width;
                        const calculatedHeight = viewportWidth * svgAspectRatio;
                        
                        container.style.width = '100vw';
                        container.style.height = calculatedHeight + 'px';
                        container.style.minHeight = calculatedHeight + 'px';
                    };
                    img.src = cleanUrl;
                }
            }
        }

        // Listener for Variant Changes
        window.addEventListener('variantChange', (e) => {
            if (!e.detail || !e.detail.flavour) return;

            // 1. Handle Colors
            const flavor = e.detail.flavour;
            const size = e.detail.size;
            
            const colorMap = {
                'orange': '#FC832C',
                'blue': '#8BBAD8'
            };
            const newColor = colorMap[flavor] || '#FC832C';
            container.style.setProperty('--accent-color', newColor);

            // 2. Handle Text Updates (Battery & Weight) - Fallback for local update if main script is slow
            const batteryEl = document.getElementById('spec-battery-value');
            const weightEl = document.getElementById('spec-weight-value');

            if (size === '10k') {
                if(batteryEl) batteryEl.textContent = 'Li Polymer 10,000 mAH';
                if(weightEl) weightEl.textContent = '192 g';
            } else {
                // Default 20k
                if(batteryEl) batteryEl.textContent = 'Li Polymer 20,000 mAH';
                if(weightEl) weightEl.textContent = '330 g';
            }

            // 3. Handle Background Dimensions
            setTimeout(updateDimensions, 50); 
        });

        // Initialize (URL Check)
        const params = new URLSearchParams(window.location.search);
        const urlVariantId = params.get('variant');
        
        // Default Elements
        const batteryEl = document.getElementById('spec-battery-value');
        const weightEl = document.getElementById('spec-weight-value');

        // Logic for Blue
        if (urlVariantId === '51120630038849' || urlVariantId === '51120630006081') {
             container.style.setProperty('--accent-color', '#8BBAD8');
        } else {
             container.style.setProperty('--accent-color', '#FC832C');
        }

        // Logic for Size (10k IDs)
        // 10k Orange: 51115715723585
        // 10k Blue: 51120630006081
        if (urlVariantId === '51115715723585' || urlVariantId === '51120630006081') {
            if(batteryEl) batteryEl.textContent = 'Li Polymer 10,000 mAH';
            if(weightEl) weightEl.textContent = '192 g';
        } else {
            if(batteryEl) batteryEl.textContent = 'Li Polymer 20,000 mAH';
            if(weightEl) weightEl.textContent = '330 g';
        }

        setTimeout(updateDimensions, 100);
        window.addEventListener('resize', updateDimensions);
    })();
</script>

