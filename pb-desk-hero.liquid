<style>
    @font-face {
        font-family: 'Hey Fun';
        src: url('https://cdn.shopify.com/s/files/1/0967/6039/8106/files/Hey_Fun.ttf?v=1765177736') format('truetype');
        font-weight: 400;
        font-style: normal;
    }
    
    /* --- ANTI-FLASH: Hide Video initially --- */
    html.js-variant-loading .desktop-video-frame video {
        opacity: 0 !important;
        visibility: hidden !important;
    }

    /* Reset & Base Styles */
    .desktop-main-wrapper * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    .desktop-main-wrapper {
        width: 100%;
        max-width: 100%;
        background-color: #fff;
        overflow-x: hidden;
        padding-bottom: calc(20 / 1440 * 100vw);
        /* Ensure positioning context for absolute children */
        position: relative; 
        z-index: 3;
    }

    /* Tablet Base Styles (768px - 1024px) - Applied at root level */
    @media (min-width: 768px) and (max-width: 1024px) {
        .desktop-main-wrapper .desktop-video-frame {
            aspect-ratio: 16 / 13;
            margin-top: calc(25 / 1440 * 100vw);
        }
    }

    /* First Div - Video and Text Section */
    .desktop-main-wrapper .desktop-primary-section {
        width: 100%;
        display: flex;
        flex-direction: column;
        overflow-x: hidden;
        background-color: rgba(255, 255, 255, 1);
    }

    /* Video Container */
    .desktop-main-wrapper .desktop-video-frame {
        width: 100vw;
        max-width: none;
        aspect-ratio: 393 / 415;
        background-color: rgba(255, 255, 255, 1);
        background: rgba(255, 255, 255, 1);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        position: relative;
        margin-left: calc(50% - 50vw);
        margin-right: calc(50% - 50vw);
        margin-top: calc(30 / 1440 * 100vw);
        padding-bottom: 0;
    }

    .desktop-main-wrapper .desktop-video-frame::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(255, 255, 255, 1);
        z-index: 0;
        pointer-events: none;
    }

    .desktop-main-wrapper .desktop-video-frame::after {
        content: "";
        position: absolute;
        left: 0;
        right: 0;
        bottom: 0;
        height: 15%;
        pointer-events: none;
        background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%);
        z-index: 2;
    }

    .desktop-main-wrapper .desktop-video-frame video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transform: scale(1.6);
        transform-origin: center;
        background-color: rgba(255, 255, 255, 1);
        position: relative;
        z-index: 1;
        transition: opacity 0.3s ease; /* Smooth reveal */
    }

    /* Desktop Styles */
    @media (min-width: 768px) {
        .desktop-main-wrapper {
            width: 100%;
            /* Maintain relative for absolute positioning */
            position: relative;
            overflow-x: hidden;
            padding: 0;
            padding-bottom: calc(27 / 1440 * 100vw);
        }

        /* Desktop Layout - Grid System */
        .desktop-main-wrapper .desktop-primary-section {
            position: relative;
            display: grid;
            grid-template-columns: 1fr 1fr;
            grid-template-rows: auto auto;
            gap: calc(40 / 1440 * 100vw) calc(60 / 1440 * 100vw);
            margin-bottom: 0;
            padding: 0px;
            overflow-x: hidden;
            box-sizing: border-box;
        }

        /* Video in center/upper area */
        .desktop-main-wrapper .desktop-video-frame {
            grid-column: 1 / -1;
            grid-row: 1;
            aspect-ratio: 16 / 13;
            width: 100vw;
            max-width: none;
            position: relative;
            margin-left: calc(50% - 50vw);
            margin-right: calc(50% - 50vw);
            margin-top: calc(-60 / 1440 * 100vw);
            margin-bottom: 0;
            border-radius: calc(12 / 1440 * 100vw);
            overflow: hidden;
            z-index: 1;
            padding-bottom: 0;
            background-color: rgba(255, 255, 255, 1);
            background: rgba(255, 255, 255, 1);
        }

        .desktop-main-wrapper .desktop-video-frame::after {
            content: "";
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            height: 15%;
            pointer-events: none;
            background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 1) 100%);
        }

        .desktop-main-wrapper .desktop-video-frame video {
            transform: scale(1);
            margin-top: 0%;
            background-color: rgba(255, 255, 255, 1);
            position: relative;
            z-index: 1;
        }

        /* Tablet Styles (768px - 1024px) - Proportional Scaling */
        @media (min-width: 768px) and (max-width: 1024px) {
            /* Use 1024px as base for tablet calculations to maintain proportional scaling */
            .desktop-main-wrapper {
                padding-bottom: calc(27 / 1024 * 100vw) !important;
            }

            .desktop-main-wrapper .desktop-primary-section {
                gap: calc(40 / 1024 * 100vw) calc(60 / 1024 * 100vw) !important;
            }

            .desktop-main-wrapper .desktop-video-frame {
                border-radius: calc(12 / 1024 * 100vw) !important;
            }
        }
    }
</style>

<div class="desktop-main-wrapper">
    <div class="desktop-primary-section first-section">
        <div class="desktop-video-frame video-container">
            <video autoplay loop muted playsinline poster="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==">
                <source src="" type="video/mp4">
                Your browser does not support the video tag.
            </video>
        </div>
    </div>
</div>

